<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptOutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom">

            <Button
                android:id="@+id/btnOptOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:foreground="?attr/selectableItemBackground"
                android:text="Opt Out"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnOptIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:foreground="?attr/selectableItemBackground"
                android:text="Opt In"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/optout_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/endowment_label" />

            <TextView
                android:id="@+id/optout_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:alpha="0.5"
                android:text="amount"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/endowment_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/optin_label" />

            <TextView
                android:id="@+id/endowment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:alpha="0.5"
                android:text="endowment"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
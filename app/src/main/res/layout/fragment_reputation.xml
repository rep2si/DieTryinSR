<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="Here is a statement for you to evaluate."
            android:padding="10dp"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/likert1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#737373"
                android:gravity="center_horizontal|bottom"
                android:text="Strongly\n disagree" />


            <RadioButton
                android:id="@+id/likert2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#737373"
                android:gravity="center_horizontal|bottom"
                android:text="Disagree" />

            <RadioButton
                android:id="@+id/likert3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#737373"
                android:gravity="center_horizontal|bottom"
                android:text="Neither agree\n nor disagree" />

            <RadioButton
                android:id="@+id/likert4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#737373"
                android:gravity="center_horizontal|bottom"
                android:text="Agree" />

            <RadioButton
                android:id="@+id/likert5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableBottom="?android:attr/listChoiceIndicatorSingle"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#737373"
                android:gravity="center_horizontal|bottom"
                android:text="Strongly\n agree" />

        </RadioGroup>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
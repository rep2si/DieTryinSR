<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.codytross.dietryinsr.MainActivity"
    tools:showIn="@layout/activity_main"
    android:gravity="center">


    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/btnPlay"
        android:text="@string/play_label" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/btnPayout"
        android:text="@string/payout_label" />

    <View
        android:layout_width="250dp"
        android:layout_height="50dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/btnRich"
        android:text="@string/permissions_label" />


    <TextView
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:text="Current location:"/>
    <TextView
        android:id="@+id/tvLoc"
        android:layout_width="250dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tvPermAlert"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textColor="#FF0000"
        android:text="Set folder location before proceeding!"
        android:textSize="20dp"
        android:visibility="gone" />

</LinearLayout>